{
  "scripts": {
    "dev": "nodemon src/server/server.ts",
    "build": "rm -rf src/.next && next build src && tsc --project tsconfig.server.json && cp -r src/server/ssl src/.next/ssl",
    "start": "cross-env NODE_ENV=production node src/.next/server.js",
    "analyze": "cross-env ANALYZE=1 npm run build",
    "lh": "lighthouse https://localhost --chrome-flags=\"--allow-insecure-localhost --headless\" --output=json --output-path=./tmp/_lh-report.json --score=75",
    "lh:ci": "node __test__/lh-check.js"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-rc.1",
    "@zeit/next-preact": "^0.1.0",
    "@zeit/next-typescript": "1.1.0",
    "babel-loader": "^7.1.4",
    "compression": "^1.7.3",
    "cross-env": "^5.2.0",
    "express": "^4.16.3",
    "next": "latest",
    "next-offline": "^3.0.4",
    "next-routes": "^1.4.2",
    "preact": "^8.3.1",
    "preact-compat": "^3.18.4",
    "progress-bar-webpack-plugin": "^1.11.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "spdy": "^3.4.7",
    "typescript": "latest",
    "typescript-babel-jest": "^1.0.5"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/next": "^2.4.11",
    "@types/react": "^16.0.36",
    "@types/spdy": "^3.4.4",
    "chromium": "^1.0.2",
    "lighthouse": "^3.2.1",
    "lighthouse-ci": "^1.2.1",
    "nodemon": "^1.17.5",
    "ts-node": "^4.1.0",
    "webpack-bundle-analyzer": "^3.0.2"
  }
}
